\newcommand{\freehk@devil@paint}{
	\@freehk@eviltrue
	\freehk@devil@painttail
	\freehk@person@paintshirt
	\freehk@devil@painttorso
	\freehk@person@paintrighthorn
	\freehk@person@painthead
	\freehk@devil@painthair
	\freehk@devil@paintgoatee
	\freehk@person@paintlefthorn
	\freehk@person@painthalo
}

\newcommand{\freehk@devil@definecolors}{
	\definecolor{skin}{RGB}{216,52,38}
	\definecolor{hair}{named}{black}
	\definecolor{shirt}{named}{black}
}

\newcommand{\freehk@devil@definestyles}{
		\tikzset{
			tail/.style ={color=\freehk@skin,double=\freehk@skin!90,double distance=.4pt*\scalingfactor},
			horns/.style={skin}
		}
}

\newcommand{\freehk@devil@paintgoatee}{
	\if@freehk@female
	\else
		\freehk@person@paintgoatee
	\fi
}


\newcommand{\freehk@devil@painthair}{
	\if@freehk@female
		\draw[hair,shading angle=-45]
			(340:3pt) arc (-20:120:3pt) -- (120:1.4pt) to [out=300,in=90,in looseness=2]
			(340:3pt) -- cycle;
		\draw[hair,line join=bevel]
			(120:3pt) arc (120:230:3pt) to[out=110,in=300,out looseness=2] 
			(120:1.4pt) -- (120:3pt) -- cycle;
	\else
		\freehk@person@painthairstyletwo
	\fi
}

\newcommand{\freehk@devil@painttail}{
		\draw[tail]
			(250:7pt) to[out=80,in=10] ++(130:3.5pt) to[out=190,in=190,looseness=3] ++(95:2.5pt) to[out=10,in=300,looseness=2] ++(100:3pt) coordinate (freehk@tmp);
		{
		\pgftransformrotate{30}
		\draw[skin] (freehk@tmp) ++(-.1pt,0) to[out=200,in=80] ++(-.8pt,-.7pt) to[out=90,in=220] ++(.9pt,2pt) to[out=320,in=90] ++(.9pt,-2pt) to[out=80,in=340] ++(-.8pt,.7pt);
		}
}

\newcommand{\freehk@devil@painttorso}{
	\begin{scope}
		\clip 
		(-4.0pt,-8.0pt) .. controls (-2pt,-10pt) and ( 3pt,-9pt) .. 
		( 5.0pt,-7.0pt) .. controls ( 5pt,  0pt) and (-5pt, 0pt) .. 
		(-4.0pt,-8.0pt) -- cycle;
		\draw[skin]
			(-1.9pt,-1pt) to[out=290,in=80]
			(-1.2pt,-9.2pt) -- (4.5pt,-9pt) to[out=120,in=280] (1.6pt,-1pt);
		\draw[color=\freehk@shirt!80]
			(-4.0pt,-8.0pt) .. controls (-2pt,-10pt) and ( 3pt,-9pt) .. 
			( 5.0pt,-7.0pt) .. controls ( 5pt,  0pt) and (-5pt, 0pt) .. 
			(-4.0pt,-8.0pt) -- cycle;
	\end{scope}
}

\newcommand{\freehk@devil@colors}{
	shirt/200/{-1/-.6},	hair/160/{-.75/.7}, skin/20/{.6/.7,.15/-.4}%
}
